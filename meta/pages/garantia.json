{
  "components": [
    {
      "type": "content",
      "container": "main",
      "components": [
        {
          "type": "heading",
          "name": "pageTitle",
          "size": "H1",
          "text": "Garantia"
        },
        {
          "type": "row",
          "components": [
            {
              "type": "col",
              "class": "col-md-12",
              "components": [
                {
                  "icon": "add_circle_outline",
                  "name": "button0",
                  "style": {
                    "marginBottom": "10px"
                  },
                  "text": "Add",
                  "type": "button",
                  "events": {
                    "click": [
                      {
                        "path": "add-garantium",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  }
                },
                {
                  "events": {
                    "click": [
                      {
                        "condition": "${event?.Value == \"csv\"}",
                        "fileName": "Garantia",
                        "name": "JOSE.getGarantia",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${(string.IsNullOrEmpty(grid0.Query.Filter)? \"true\" : grid0.Query.Filter)}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Prestamo"
                          },
                          {
                            "name": "$select",
                            "value": "IdGarantia,Tipo,Valor,Ubicacion,Prestamo.Periodo as PrestamoPeriodo,FechaCreacion"
                          }
                        ],
                        "type": "export"
                      },
                      {
                        "condition": "${event == null || event.Value == \"xlsx\"}",
                        "fileName": "Garantia",
                        "format": "xlsx",
                        "name": "JOSE.getGarantia",
                        "parameters": [
                          {
                            "name": "$filter",
                            "value": "${(string.IsNullOrEmpty(grid0.Query.Filter)? \"true\" : grid0.Query.Filter)}"
                          },
                          {
                            "name": "$orderby",
                            "value": "${grid0.Query.OrderBy}"
                          },
                          {
                            "name": "$expand",
                            "value": "Prestamo"
                          },
                          {
                            "name": "$select",
                            "value": "IdGarantia,Tipo,Valor,Ubicacion,Prestamo.Periodo as PrestamoPeriodo,FechaCreacion"
                          }
                        ],
                        "type": "export"
                      }
                    ]
                  },
                  "icon": "get_app",
                  "items": [
                    {
                      "icon": "",
                      "text": "Excel",
                      "value": "xlsx"
                    },
                    {
                      "icon": "",
                      "text": "CSV",
                      "value": "csv"
                    }
                  ],
                  "name": "splitbutton0",
                  "style": {
                    "marginLeft": "10px",
                    "marginBottom": "10px"
                  },
                  "text": "Export",
                  "type": "splitbutton"
                },
                {
                  "attributes": [
                    {
                      "name": "@oninput",
                      "value": "@(async(args) => {search = $\"{args.Value}\";await grid0.GoToPage(0);await Load();})"
                    }
                  ],
                  "name": "textbox0",
                  "placeholder": "Search ...",
                  "style": {
                    "display": "block",
                    "marginBottom": "10px",
                    "width": "100%"
                  },
                  "type": "textbox",
                  "value": ""
                },
                {
                  "name": "grid0",
                  "allowFiltering": true,
                  "filterMode": "advanced",
                  "allowPaging": true,
                  "allowSorting": true,
                  "data": "${getGarantiaResult}",
                  "events": {
                    "loadData": [],
                    "rowDoubleClick": [
                      {
                        "parameters": [
                          {
                            "name": "IdGarantia",
                            "value": "${event.Data.IdGarantia}"
                          }
                        ],
                        "path": "edit-garantium",
                        "type": "popup",
                        "then": [
                          {
                            "code": "await grid0.Reload();",
                            "type": "execute"
                          },
                          {
                            "code": "await InvokeAsync(() => { StateHasChanged(); });",
                            "type": "execute"
                          }
                        ]
                      }
                    ]
                  },
                  "title": "",
                  "columns": [
                    {
                      "property": "IdGarantia",
                      "title": "Id Garantia"
                    },
                    {
                      "property": "Tipo",
                      "title": "Tipo"
                    },
                    {
                      "property": "Valor",
                      "title": "Valor"
                    },
                    {
                      "property": "Ubicacion",
                      "title": "Ubicacion"
                    },
                    {
                      "property": "Fk_IdPrestamos",
                      "sortProperty": "Prestamo.Periodo",
                      "groupProperty": "Prestamo.Periodo",
                      "filterProperty": "Prestamo.Periodo",
                      "template": "${data.Prestamo?.Periodo}",
                      "title": "Prestamo"
                    },
                    {
                      "property": "FechaCreacion",
                      "formatString": "{0:dd/MM/yyyy}",
                      "title": "Fecha Creacion"
                    },
                    {
                      "filterable": false,
                      "sortable": false,
                      "width": "70px",
                      "textAlign": "center",
                      "template": [
                        {
                          "attributes": [
                            {
                              "name": "@onclick:stopPropagation",
                              "value": true
                            }
                          ],
                          "buttonStyle": "danger",
                          "icon": "close",
                          "name": "gridDeleteButton",
                          "text": "",
                          "size": "sm",
                          "type": "button",
                          "events": {
                            "click": [
                              {
                                "condition": "await DialogService.Confirm(\"Are you sure you want to delete this record?\") == true",
                                "error": [
                                  {
                                    "detail": "Unable to delete Garantium",
                                    "severity": "error",
                                    "summary": "Error",
                                    "type": "notify"
                                  }
                                ],
                                "name": "JOSE.deleteGarantium",
                                "parameters": [
                                  {
                                    "name": "IdGarantia",
                                    "value": "${data.IdGarantia}"
                                  }
                                ],
                                "then": [
                                  {
                                    "code": "await grid0.Reload();",
                                    "condition": "result != null",
                                    "type": "execute"
                                  }
                                ],
                                "type": "invoke"
                              }
                            ]
                          }
                        }
                      ]
                    }
                  ],
                  "type": "datagrid",
                  "itemType": "FinalProyect2.Models.Jose.Garantium"
                }
              ]
            }
          ]
        }
      ]
    }
  ],
  "events": {
    "load": [
      {
        "condition": "string.IsNullOrEmpty(search)",
        "name": "search",
        "type": "set",
        "value": "\"\"",
        "valueType": "string"
      },
      {
        "name": "JOSE.getGarantia",
        "parameters": [
          {
            "name": "$filter",
            "operator": "or",
            "value": [
              {
                "operation": "contains",
                "property": "Tipo",
                "type": "string",
                "value": "\"${search}\""
              },
              {
                "operation": "contains",
                "property": "Valor",
                "type": "string",
                "value": "\"${search}\""
              },
              {
                "operation": "contains",
                "property": "Ubicacion",
                "type": "string",
                "value": "\"${search}\""
              }
            ]
          },
          {
            "name": "$expand",
            "value": "Prestamo"
          }
        ],
        "then": [
          {
            "name": "getGarantiaResult",
            "type": "set",
            "value": "${result}",
            "valueType": "IEnumerable<FinalProyect2.Models.Jose.Garantium>"
          }
        ],
        "type": "invoke"
      }
    ]
  },
  "name": "Garantia",
  "layout": "Main"
}