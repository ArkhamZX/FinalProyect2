@inherits FinalProyect2.Layouts.MainLayoutComponent

@using Radzen
@using Radzen.Blazor
@using FinalProyect2.Models.Jose
@using FinalProyect2.Pages
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />

<RadzenLayout>
  <ChildContent>
    <RadzenHeader>
      <ChildContent>
        <div class="row justify-content-start align-items-center">
          <div class="col-6 d-flex align-items-center">
            <RadzenSidebarToggle Click="@SidebarToggle0Click">
            </RadzenSidebarToggle>
            <RadzenLabel Text="FinalProyect2">
            </RadzenLabel>
          </div>
          <div class="col-6 text-right">
          </div>
        </div>
      </ChildContent>
    </RadzenHeader>
    <RadzenBody @ref="body0">
      <ChildContent>
        <RadzenContentContainer Name="main">
        @Body
        </RadzenContentContainer>
      </ChildContent>
    </RadzenBody>
    <RadzenSidebar @ref="sidebar0">
      <ChildContent>
        <RadzenPanelMenu style="height: 100%">
          <ChildContent>
            <RadzenPanelMenuItem Text="Clientes" Path="clientes">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Cuenta Bancos" Path="cuenta-bancos">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Cuota Inversions" Path="cuota-inversions">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Cuota Prestamos" Path="cuota-prestamos">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Garantia" Path="garantia">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Inversiones" Path="inversiones">
            </RadzenPanelMenuItem>
            <RadzenPanelMenuItem Text="Prestamos" Path="prestamos">
            </RadzenPanelMenuItem>
          </ChildContent>
        </RadzenPanelMenu>
      </ChildContent>
    </RadzenSidebar>
    <RadzenFooter>
      <ChildContent>
        <RadzenLabel Text="FinalProyect2, Copyright Ⓒ 2023">
        </RadzenLabel>
      </ChildContent>
    </RadzenFooter>
  </ChildContent>
</RadzenLayout>
